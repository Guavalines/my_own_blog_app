<div class="container mt-5 pt-2">
    <h1 class="text-center my-2 pb-2"><strong>Articles</strong></h1>
  <div class="mb-3">
    <%= render 'search/form' %>
  </div>
  <br>

  <div class="container-fluid pe-0 pb-4">
    <div class="row me-0">
      <div class="col-lg-12">
        <div class="row">
          <% @posts.each do |post| %>
            <% if post.present? && post.persisted? %>
              <div class="col-xs-12 col-sm-6 col-lg-4 col-sm-offset-1">
                <div class="card mb-3">
                  <% if post.photo.attached? %>
                    <%= image_tag url_for(post.photo), class: "img-fluid", height: 320, width: 300, crop: :fill %>
                  <% end %>
                  <div class= "card-body">
                    <h2 class="text-center"><%= post.title %></h2>
                    <h5 class="text-center fs-6 text-muted"> by <%= link_to post.user.name, user_path(post.user), class:"black" %></h5>
                    <div class="text-center">
                      <%= link_to "View Article", post_path(post.id), class: 'btn btn-dark stretched-link btn-sm' %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>


    <br>
    <div class="text-center mb-5">
      <%= link_to "Back", root_path, class: "btn btn-dark" %>
    </div>
  </div>
</div>
<%= render 'layouts/footer' %>
