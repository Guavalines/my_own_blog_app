<div>
  <h1 class="text-center mb-4 mt-3">Articles</h1>
</div>

<div class="mb-3"><%= render 'search/form' %></div>

<br>

<div class="container-fluid pe-0">
  <div class="row me-0">
    <div class="col-lg-8">
      <div class="row">
   <% @posts.each do |post| %>
          <div class="col-xs-12 col-sm-6 col-lg-4 col-sm-offset-1">
            <div class="card mb-3">
              <img <%=image_tag("yoga.png")%>
              <div class= "card-body">
                <h4 class="mb-0">
                  <h2 class="text-center"><%= post.title %></h2>
                <h5 class="text-center fs-6 text-muted"> by <%= link_to post.user.name, user_path(post.user), class:"black" %></h4>
                </h4>
                <div class="text-center">
                  <%= link_to "View Article", post_path(post.id), class: 'btn btn-dark stretched-link btn-sm' %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
