<div class="container m-5 px-5">
    <img id="image_show" <%= image_tag url_for(@post.photo) %>
    <h2 class="text-center mt-5"><strong><%= @post.title %></strong></h2>
  <div class="card mt-5">
    <div class="bg-light p-3">
      <p class="border-start fst-italic ps-3">
      <div>
        <%= @post.body %>
      </div>
      </p>
    </div>
  </div>
</div>

 <hr>

<div class="container">
<h5><strong>Discussion</strong></h5>
<h5><%=@post.comments.count%> Comments</h5>
  <%= render 'comments/form',
    post: @post,
    comment: @post.comments.build,
    submit_label: "Reply" %>
  <% @comments.each do |comment| %>
    <%= render 'comments/comment',
    post: @post,
    comment: comment %>
  <% end %>
</div>


<div class="container my-5">
  <%= link_to "Edit this post", edit_post_path(@post),
      class: "btn btn-small btn-dark my-2" %> |
  <%= link_to "Back to posts", posts_path,
      class: "btn btn-small btn-dark my-2" %>
  <%= button_to "Destroy this post", @post, method: :delete,
      class: "btn btn-small btn-danger p-0" %>
</div>
<%= render 'layouts/footer' %>
