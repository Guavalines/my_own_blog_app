  </head>
  <body>
  <div class="border border-dark border-5 border-top-0">
    <header>
    <%= render 'layouts/navbar' %>
    <%= render 'layouts/alerts' %>
    </header>
    <main>
      <%= yield %>
    </main>
    </div>
  </body>
</html>
